{
  "name": "sass-vanilla-js-ecommerce-site",
  "version": "1.0.0",
  "description": "A complete responsive e-commerce website frontend built with Vanilla JavaScript (ES6+), modular styling using Sass (SCSS), and HTML5.",
  "repository": {
    "type": "git",
    "url": "https://github.com/kolonatalie/sass-vanilla-js-ecommerce-site.git"
  },
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "js/main.js",
  "scripts": {
    "start": "live-server",
    "compile": "sass scss:css",
    "build": "sass scss:css --no-source-map --style=expanded",
    "watch-css": "sass --watch scss:css --no-source-map --style=expanded",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint . --ext .js",
    "lint:css": "stylelint '**/*.{css,scss}'",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@stylistic/stylelint-plugin": "^4.0.0",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "live-server": "^1.2.2",
    "postcss-scss": "^4.0.9",
    "sass": "^1.92.1",
    "stylelint": "^16.25.0",
    "stylelint-config-recess-order": "^7.3.0",
    "stylelint-config-standard-scss": "^16.0.0"
  },
  "keywords": ["sass", "scss", "vanilla-js", "ecommerce", "frontend"]
}